{% extends 'base.html.twig' %}

{% block title %}Bienvenido{% endblock %}

{% block body %}
<div class="container mt-5 text-center">
    <h1 class="mb-4">Bienvenido a la aplicación</h1>

    {% if app.user %}
        <p class="mb-3 fs-5">Hola, <strong>{{ app.user.username }}</strong>!</p>
        <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg">Cerrar sesión</a>
    {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg me-2">Login</a>
        <a href="{{ path('app_register') }}" class="btn btn-success btn-lg">Register</a>
    {% endif %}
</div>
{% endblock %}
